<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M1Examen_Jorge_Corugedo_Rodriguez" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayoutOutlinedBoxPurple</item>
        <item name="android:textViewStyle">@style/textViewPurple</item>

    </style>
    <style name="TextInputLayoutOutlinedBoxPurple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/coloreditext</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="boxStrokeErrorColor">?attr/colorSecondaryVariant</item>
        <item name="errorTextColor">?attr/colorSecondaryVariant</item>
        <item name="errorIconTint">?attr/colorSecondaryVariant</item>
    </style>
    <style name="textViewPurple" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>